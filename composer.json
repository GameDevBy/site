{
    "name": "gamedevby/site",
    "description": "Site for GameDev.by",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "GameDev.by",
            "homepage": "https://gamedev.by",
            "role": "Developer",
            "email": "admin@gamedev.by"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://git.drupal.org/project/phingdrushtask.git"
        },
        {
            "type": "package",
            "package": {
                "name": "pfrenssen/phpcs-pre-push",
                "version": "1.0",
                "type": "git-hook",
                "source": {
                    "url": "https://gist.github.com/498fc52fea3f965f6640.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": "^7.3",
        "composer/installers": "^1.6",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/console": "^1.8",
        "drupal/core": "^8.6",
        "drush/drush": "^9.5",
        "oomphinc/composer-installers-extender": "^1.1",
        "vlucas/phpdotenv": "^3.1",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.8",
        "roave/security-advisories": "dev-master",
        "webflo/drupal-core-require-dev": "^8.6",
        "phing/phing": "^2.16",
        "pfrenssen/phpcs-pre-push": "^1.0",
        "drupal/phingdrushtask": "dev-7.x-2.x",
        "drupal/drupal-extension": "^3.4",
        "drupal/devel": "1.*@dev",
        "drupal/config_update": "^1.6"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "php": "7.3"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "@composer drupal:scaffold"
        ],
        "drupal:upgrade": [
            "@composer update drupal/core webflo/drupal-core-require-dev symfony/* --with-dependencies"
        ],
        "pre-install-cmd": [
            "@pre-cmd"
        ],
        "pre-update-cmd": [
            "@pre-cmd"
        ],
        "post-install-cmd": [
            "@post-cmd"
        ],
        "post-update-cmd": [
            "@post-cmd"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "npm-asset",
            "bower-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "enable-patching": true,
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        }
    }
}
