{
    "name": "gamedevby/site",
    "description": "Site for GameDev.by",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "GameDev.by",
            "homepage": "https://gamedev.by",
            "role": "Developer",
            "email": "admin@gamedev.by"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://git.drupal.org/project/phingdrushtask.git"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-dom": "*",
        "composer/installers": "^1.6",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/console": "^1.8",
        "drupal/core": "^8.6",
        "drush/drush": "^9.5",
        "oomphinc/composer-installers-extender": "^1.1",
        "vlucas/phpdotenv": "^3.1",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.8",
        "drupal/config_update": "^1.6",
        "drupal/devel": "1.*@dev",
        "drupal/drupal-extension": "^3.4",
        "drupal/phingdrushtask": "dev-7.x-2.x",
        "mouf/nodejs-installer": "^1.0",
        "phing/phing": "^2.16",
        "phpmd/phpmd": "^2.6",
        "roave/security-advisories": "dev-master",
        "sclable/xml-lint": "^0.2.4",
        "vimeo/psalm": "^3.0",
        "webflo/drupal-core-require-dev": "^8.6",
        "phan/phan": "^1.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "php": "7.3"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\DrupalProject\\": "tests/src",
            "DrupalProject\\": "src",
            "Drush\\Commands\\": "drush"
        },
        "classmap": [
            "src/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-cmd": [
            "DrupalProject\\composer\\CheckerHandler::checkComposerVersion"
        ],
        "post-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "@composer drupal:scaffold"
        ],
        "drupal:update": [
            "@composer update drupal/core webflo/drupal-core-require-dev symfony/* --with-dependencies"
        ],
        "drupal:check-phpmd": [
            "phpmd ./drush,./src,./tests,./.phan,./web/themes,./web/profiles,./web/modules text ./phpmd-ruleset.xml --exclude web/modules/contrib/*,web\\modules\\contrib\\*,web/themes/contrib/*,web\\themes\\contrib\\*,web/profiles/contrib/*,web\\profiles\\contrib\\*"
        ],
        "drupal:check-phpcs": [
            "DrupalProject\\composer\\CheckerHandler::runPhpcs"
        ],
        "drupal:check-eslint": [
            "DrupalProject\\composer\\CheckerHandler::runEslint"
        ],
        "drupal:fix-eslint": [
            "eslint --cache -c ./web/core/.eslintrc.json --fix ."
        ],
        "drupal:check-stylelint": [
            "DrupalProject\\composer\\CheckerHandler::runStylelint"
        ],
        "drupal:fix-stylelint": [
            "stylelint --cache --config ./web/core/.stylelintrc.json --fix \"**/*.css\" \"**/*.scss\" \"**/*.sass\"  \"**/*.less\" \"**/*.sss\""
        ],
        "drupal:fix-phpcs": [
            "phpcbf"
        ],
        "drupal:check-json": [
            "DrupalProject\\composer\\CheckerHandler::runJsonLint"
        ],
        "drupal:check-yml": [
            "yamllint \"./**/*.yaml\" \"./**/*.yml\""
        ],
        "drupal:check-xml": [
            "xmllint -e vendor ."
        ],
        "drupal:check-shell": [
            "DrupalProject\\composer\\CheckerHandler::runShellCheck"
        ],
        "drupal:check-power-script": [
            "DrupalProject\\composer\\CheckerHandler::runPowerScriptCheck"
        ],
        "drupal:check-bat": [
            "DrupalProject\\composer\\CheckerHandler::runBatCheck"
        ],
        "drupal:check-docker": [
            "DrupalProject\\composer\\CheckerHandler::runDockerCheck"
        ],
        "drupal:check-psalm": [
            "psalm --diff --diff-methods"
        ],
        "drupal:check-phan": [
            "DrupalProject\\composer\\CheckerHandler::runPhan"
        ],
        "drupal:check": [
            "pjv -w -r",
            "@drupal:check-phpcs",
            "@drupal:check-phpmd",
            "@drupal:check-eslint",
            "@drupal:check-stylelint",
            "@drupal:check-json",
            "@drupal:check-yml",
            "@drupal:check-xml",
            "@drupal:check-shell",
            "@drupal:check-power-script",
            "@drupal:check-bat",
            "@drupal:check-docker",
            "@drupal:check-psalm",
            "@drupal:check-phan"
        ],
        "drupal:fix": [
            "@drupal:fix-phpcs",
            "@drupal:fix-eslint",
            "@drupal:fix-stylelint"
        ],
        "pre-install-cmd": [
            "@pre-cmd"
        ],
        "pre-update-cmd": [
            "@pre-cmd"
        ],
        "post-install-cmd": [
            "@post-cmd",
            "DrupalProject\\composer\\ScriptHandler::npmInstall"
        ],
        "post-update-cmd": [
            "@post-cmd",
            "npm update --no-progress"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "npm-asset",
            "bower-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "web/libraries/ckeditor/plugins/{$name}": ["vendor:ckeditor-plugin"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"]
        },
        "enable-patching": true,
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "mouf": {
            "nodejs": {
                "forceLocal": true
            }
        }
    }
}
