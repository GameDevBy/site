{
    "name": "gamedevby/site",
    "description": "Site for GameDev.by",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "GameDev.by",
            "homepage": "https://gamedev.by",
            "role": "Developer",
            "email": "admin@gamedev.by"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://git.drupal.org/project/phingdrushtask.git"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-dom": "*",
        "composer/installers": "^1.6",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/console": "^1.8",
        "drupal/core": "^8.6",
        "drush/drush": "^9.5",
        "oomphinc/composer-installers-extender": "^1.1",
        "vlucas/phpdotenv": "^3.1",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.8",
        "roave/security-advisories": "dev-master",
        "webflo/drupal-core-require-dev": "^8.6",
        "phing/phing": "^2.16",
        "phpmd/phpmd": "^2.6",
        "drupal/phingdrushtask": "dev-7.x-2.x",
        "drupal/drupal-extension": "^3.4",
        "drupal/devel": "1.*@dev",
        "drupal/config_update": "^1.6",
        "mouf/nodejs-installer": "^1.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "php": "7.3"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\DrupalProject\\": "tests/src",
            "DrupalProject\\": "src"
        },
        "classmap": [
            "src/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "@composer drupal:scaffold"
        ],
        "drupal:update": [
            "@composer update drupal/core webflo/drupal-core-require-dev symfony/* --with-dependencies"
        ],
        "drupal:phpmd": [
            "phpmd ./drush,./src,./tests,./web/themes,./web/profiles,./web/modules text ./ruleset.xml --exclude web/modules/contrib/*,web\\modules\\contrib\\*,web/themes/contrib/*,web\\themes\\contrib\\*,web/profiles/contrib/*,web\\profiles\\contrib\\*"
        ],
        "drupal:phpcs": [
            "DrupalProject\\composer\\ScriptHandler::runPhpcsCheck"
        ],
        "drupal:eslint": [
            "eslint --cache -c ./web/core/.eslintrc.json ."
        ],
        "pre-install-cmd": [
            "@pre-cmd"
        ],
        "pre-update-cmd": [
            "@pre-cmd"
        ],
        "post-install-cmd": [
            "@post-cmd",
            "DrupalProject\\composer\\ScriptHandler::npmInstall"
        ],
        "post-update-cmd": [
            "@post-cmd",
            "npm update --no-progress"
        ],
        "drupal:check": [
            "pjv -w -r",
            "@drupal:phpcs",
            "@drupal:phpmd",
            "@drupal:eslint"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "npm-asset",
            "bower-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "web/libraries/ckeditor/plugins/{$name}": ["vendor:ckeditor-plugin"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "enable-patching": true,
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "mouf": {
            "nodejs": {
                "forceLocal": true
            }
        }
    }
}
